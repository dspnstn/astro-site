---
import ContentLayout from "../layouts/ContentLayout.astro";
import Layout from "../layouts/Layout.astro";
import YT from "../components/YT.astro";
const pageTitle = "Hello! Welcome to my site";
---

<Layout pageTitle={pageTitle}>
	<ContentLayout hasVideo={true}>
		<p class="flex justify-center">Welcome to my site!</p>
		<YT videoID="dQw4w9WgXcQ?si=PuNXhkj3UIyg_tmM" />
		<form
			class="form mx-auto text-center"
			action="mailto:daniil.espenstein@gmail.com"
			enctype="text/plain"
		>
			<div class="form-inner">
				<label for="name">Enter your name: </label>
				<input type="text" name="name" id="name" required />
			</div>
			<div class="form-inner">
				<label for="email">Enter your email: </label>
				<input type="email" name="email" id="email" required />
			</div>
			<button class="" type="submit">Send</button>
		</form>
	</ContentLayout>
</Layout>
